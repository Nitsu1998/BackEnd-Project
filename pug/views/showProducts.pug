doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body
        a(href="/") 
            input(
                type="submit" 
            value="Add Product"
            )
        if (products.length === 0)
            h1 No Products
        else 
            div(style={display: 'flex', padding: '1rem'} )
                each val in products
                    div(style={padding: '1rem'})
                        h1 Product NÂ°: #{val.id}
                        p Title: #{val.title}
                        p Price: #{val.price}
                        img(src=val.img, style={width: '200px'})